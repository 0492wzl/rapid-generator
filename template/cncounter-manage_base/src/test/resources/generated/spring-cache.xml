<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!-- 设置spring的guavaCache -->
    <bean id="guavaCacheManager" class="org.springframework.cache.guava.GuavaCacheManager">
        <property name="cacheSpecification" value="concurrencyLevel=4,expireAfterAccess=100s,expireAfterWrite=100s" />
    </bean>
    <!--shiro的本地缓存manager-->
    <bean id="shiroLocalCacheManager" class="com.ybs.exam.auth.shiro.cache.ShiroGuavaCacheManger">
        <property name="cacheManager" ref="guavaCacheManager"/>
    </bean>
    <!--shrio的共享缓存manager使用redis实现-->
    <bean id="redisCacheManager" class="com.ybs.exam.auth.shiro.cache.RedisCacheManagerWrapper">
        <property name="redisManager" ref="redisManager"/>
    </bean>
    <!--jedis的连接池配置-->
    <bean id="poolConfig" class="redis.clients.jedis.JedisPoolConfig">
        <property name="maxIdle" value="${r'${redis.maxIdle}'}" />
        <property name="maxWaitMillis" value="${r'${redis.maxWait}'}" />
        <property name="testOnBorrow" value="${r'${redis.testOnBorrow}'}" />
    </bean>
    <!-- jedis的连接工程方法 -->
    <bean id="connectionFactory" class="org.springframework.data.redis.connection.jedis.JedisConnectionFactory">
        <property name="hostName" value="${r'${redis.host}'}"/>
        <property name="port" value="${r'${redis.port}'}"/>
        <property name="password" value=""/>
        <property name="poolConfig" ref="poolConfig"/>
    </bean>
    <!--redis实际使用的template-->
    <bean id="redisTemplate" class="org.springframework.data.redis.core.RedisTemplate">
        <property name="connectionFactory"   ref="connectionFactory" />
    </bean>
    <!--spring cache的redis封装-->
    <bean id="redisManager" class="com.ybs.exam.cache.RedisManagerImpl">
        <property name="redisTemplate" ref="redisTemplate"/>
    </bean>

</beans>